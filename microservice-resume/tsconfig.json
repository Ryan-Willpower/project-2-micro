{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "traceResolution": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@service/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@config": ["src/configs/"],
      "@typedef/*": ["src/graphql/typedefs"],
      "@resolver/*": ["src/graphql/resolvers"]
    }
  },
  "include": ["src/**/*"]
}
