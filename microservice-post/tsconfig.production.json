{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "traceResolution": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["src/__tests__/**/*"]
}
